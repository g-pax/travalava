{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 360,
          "height": 640,
          "deviceScaleFactor": 2,
          "disabled": false
        },
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638,
          "cpuSlowdownMultiplier": 4
        },
        "chromeFlags": [
          "--headless=new",
          "--no-sandbox",
          "--disable-dev-shm-usage"
        ],
        "output": ["html", "json"]
      },
      "url": ["http://127.0.0.1:4317/", "http://127.0.0.1:4317/auth/login"]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.8 }],
        "categories:accessibility": ["warn", { "minScore": 0.8 }],
        "total-byte-weight": ["warn", { "maxNumericValue": 500000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lhci/mobile",
      "reportFilenamePattern": "%%PATHNAME%%.report.html"
    }
  }
}
